<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="ArmorHelmetMakeableBase" ParentName="ArmorMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Cyber_Helmet</defName>
    <label>cyber helmet</label>
    <description>The standard head-casing of the Cybermen, hides the nasty bastardisation of rotting flesh and technology beneath.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Cybernetics</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Pawn/Cyberman/CybermanHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>2.7</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <ArmorRating_Electric>0</ArmorRating_Electric>
      <Insulation_Cold>-3</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Component>7</Component>
      <Plasteel>60</Plasteel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Pawn/Cyberman/Cyberman_Helmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Cyberman</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

<ThingDef ParentName="ArmorMakeableBase">
    <defName>Cyber_Armour</defName>
    <label>cyber armour</label>
    <description>The powerhouse of the Cyberman, an armour that encases the organic - melding strength and speed.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Cybernetics</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Pawn/Cyberman/CybermanArmour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>170000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.65</ArmorRating_Sharp>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>-45</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.75</MoveSpeed>
      <WorkSpeedGlobal>0.75</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Component>18</Component>
      <Plasteel>135</Plasteel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Pawn/Cyberman/Cyberman_Armour</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
	<tags>
        <li>Cyberman</li>
     </tags>
      <defaultOutfitTags>
        <li>Cyberman</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

</Defs>